<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorApp"
        mc:Ignorable="d"
        Title="Calculator" Height="500" Width="400">
    <!--<Window.DataContext>
        -->
    <!--<local:MainViewModel/>-->
    <!--
    </Window.DataContext>-->

    <Grid Background="#6B8F71">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="#5A7A5F">
            <!-- Mode Switch Dropdown -->
            <ComboBox Width="120" SelectedIndex="0" SelectionChanged="ModeSelectionChanged">
                <ComboBoxItem Content="Standard" IsSelected="True"/>
                <ComboBoxItem Content="Programmer"/>
            </ComboBox>

            <!-- Menu Button with Dropdown -->
            <Menu>
                <MenuItem Header="☰ Menu">
                    <MenuItem Header="Copy"/>
                    <MenuItem Header="Cut"/>
                    <MenuItem Header="Paste"/>
                    <Separator/>
                    <MenuItem Header="Digit Grouping"/>
                </MenuItem>
            </Menu>

            <!-- Help Button with Dropdown -->
            <Menu>
                <MenuItem Header="Help">
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <!-- Display for result -->
        <TextBlock Text="0" FontSize="50" Foreground="#FFFFFF" TextAlignment="Right" 
                   Padding="10" Height="80" Background="#5A7A5F" Grid.Row="1"/>

        <!-- Memory Buttons -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource RoundedButton}" Content="MC" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="MR" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="M+" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="M-" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="3" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="MS" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="4" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="M>" Foreground="#FFFFFF" Background="#6B8F71" Grid.Column="5" Click="ButtonClick"/>
        </Grid>

        <!-- Buttons Grid (Fitted Below Memory Buttons) -->
        <Grid Grid.Row="3" Margin="10" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- First Row -->
            <Button Style="{StaticResource RoundedButton}" Content="%" Grid.Row="0" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="CE" Grid.Row="0" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="C" Grid.Row="0" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="⌫" Grid.Row="0" Grid.Column="3" Click="ButtonClick"/>

            <!-- Second Row -->
            <Button Style="{StaticResource RoundedButton}" Content="1/x" Grid.Row="1" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="x²" Grid.Row="1" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="²√x" Grid.Row="1" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="/" Grid.Row="1" Grid.Column="3" Click="ButtonClick"/>

            <!-- Third Row -->
            <Button Style="{StaticResource RoundedButton}" Content="7" Grid.Row="2" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="8" Grid.Row="2" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="9" Grid.Row="2" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="×" Grid.Row="2" Grid.Column="3" Click="ButtonClick"/>

            <!-- Fourth Row -->
            <Button Style="{StaticResource RoundedButton}" Content="4" Grid.Row="3" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="5" Grid.Row="3" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="6" Grid.Row="3" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="-" Grid.Row="3" Grid.Column="3" Click="ButtonClick"/>

            <!-- Fifth Row -->
            <Button Style="{StaticResource RoundedButton}" Content="1" Grid.Row="4" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="2" Grid.Row="4" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="3" Grid.Row="4" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="+" Grid.Row="4" Grid.Column="3" Click="ButtonClick"/>

            <!-- Sixth Row -->
            <Button Style="{StaticResource RoundedButton}" Content="±" Grid.Row="5" Grid.Column="0" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="0" Grid.Row="5" Grid.Column="1" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="." Grid.Row="5" Grid.Column="2" Click="ButtonClick"/>
            <Button Style="{StaticResource RoundedButton}" Content="=" Grid.Row="5" Grid.Column="3" Background="#5A7A5F" Click="ButtonClick"/>
        </Grid>
    </Grid>
</Window>
